# Solana RPC endpoints
# Public endpoint (rate limited - ~40 req/s, but often less)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Recommended: Use a premium RPC provider for better rate limits
# Helius (free tier: 10 req/s, paid: 100+ req/s)
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# QuickNode
# SOLANA_RPC_URL=https://YOUR_ENDPOINT.solana-mainnet.quiknode.pro/YOUR_TOKEN/

# Triton (deBridge uses this)
# SOLANA_RPC_URL=https://YOUR_ENDPOINT.triton.one/

# ClickHouse connection
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=dln_dashboard
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Dashboard API server port
API_PORT=3001

# Data collection settings
# Target order counts (minimum 50k total as per task)
TARGET_CREATED_ORDERS=25000
TARGET_FULFILLED_ORDERS=25000

# Batch sizes
# Signatures per getSignaturesForAddress call (max 1000)
SIGNATURES_BATCH_SIZE=1000

# Transactions per getParsedTransactions call
# Lower = more reliable, Higher = faster
# Recommended: 20 for public RPC, 50-100 for premium
TX_BATCH_SIZE=20

# Delay between batches (ms)
BATCH_DELAY_MS=500

# Rate limiting (requests per second)
# Public RPC: 2-5 (conservative)
# Helius free: 10
# Premium RPC: 50-100
RATE_LIMIT_RPS=2

# Log level (debug, info, warn, error)
LOG_LEVEL=info
