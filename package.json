{
  "name": "dln-solana-dashboard",
  "version": "1.0.0",
  "description": "Dashboard for DLN order events on Solana - OrderCreated and OrderFulfilled",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "collect": "tsx src/collector/index.ts",
    "api": "tsx src/api/server.ts",
    "migrate": "tsx src/db/migrate.ts",
    "dashboard": "cd dashboard && npm run dev",
    "install:all": "npm install && cd dashboard && npm install",
    
    "temporal:worker": "tsx src/temporal/worker.ts",
    "temporal:worker:rpc": "WORKER_MODE=rpc tsx src/temporal/worker.ts",
    "temporal:worker:db": "WORKER_MODE=db tsx src/temporal/worker.ts",
    "temporal:start": "tsx src/temporal/client.ts start",
    "temporal:status": "tsx src/temporal/client.ts status",
    "temporal:watch": "tsx src/temporal/client.ts watch",
    "temporal:pause": "tsx src/temporal/client.ts pause",
    "temporal:resume": "tsx src/temporal/client.ts resume",
    "temporal:cancel": "tsx src/temporal/client.ts cancel",
    "temporal:health": "tsx src/temporal/client.ts health"
  },
  "keywords": [
    "solana",
    "debridge",
    "dln",
    "blockchain",
    "dashboard",
    "clickhouse",
    "temporal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clickhouse/client": "^1.8.1",
    "@solana/web3.js": "^1.95.4",
    "@temporalio/activity": "^1.11.4",
    "@temporalio/client": "^1.11.4",
    "@temporalio/worker": "^1.11.4",
    "@temporalio/workflow": "^1.11.4",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
